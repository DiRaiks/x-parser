{
  "_note": "Copy this file to app.json and customize settings for your deployment",
  
  "openai": {
    "model": "gpt-4o-mini",
    "temperatures": {
      "relevance": 0.3,
      "translation": 0.1,
      "summary": 0.5,
      "thread_analysis": 0.4
    },
    "max_tokens": 4000,
    "timeout": 60000
  },
  
  "parsing": {
    "max_tweets_per_fetch": 20,
    "fetch_interval_minutes": 10,
    "max_retries": 2,
    "retry_delay_ms": 2000,
    "request_timeout_ms": 15000
  },
  
  "analysis": {
    "default_language": "en",
    "supported_languages": ["en", "ru"],
    "batch_size": 5,
    "auto_analyze": false
  },
  
  "ui": {
    "tweets_per_page": 10,
    "max_pages": 50,
    "auto_refresh_interval_ms": 60000
  },
  
  "twitter": {
    "rate_limit_delay_ms": 3000
  }
} 